#!/bin/bash

for i in $(ls mass); do 
    cd mass/$i/LOGS
    if [ -d "Analysis" ]; then
        rm -rf Analysis
    fi
    mkdir Analysis
    cd Analysis
    less ../history.data | awk '{ print $3"\t"$2"\t"$36"\t"$35 }' |
    sed -e '1,5d' > MALT.dat 
    cp ../../../../HRplot.py .
    cp ../../../../locateBump.py .
    python locateBump.py
    python HRplot.py
    cd ../../../..
done

if [ -d "plots" ]; then
    rm -rf plots
fi
./grabPlots.sh